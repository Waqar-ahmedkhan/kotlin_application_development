<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carditem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="7dp"
    tools:context=".each_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:id="@+id/HImages"
            android:layout_height="100dp"
            android:src="@drawable/img1"
            android:layout_margin="10dp"
            app:shapeAppearanceOverlay="@style/SoftCorner">
            
        </com.google.android.material.imageview.ShapeableImageView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeadingTitle"
            android:text="hello world i am  looking for top personality in computer scienece and alo of thinks"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>