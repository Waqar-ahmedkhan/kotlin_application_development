<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to CoffeeShop"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/coffeeTypeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter coffee type (e.g., Latte, Espresso)"
        android:inputType="text" />

    <EditText
        android:id="@+id/coffeeSizeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter size (Small, Medium, Large)"
        android:inputType="text" />

    <EditText
        android:id="@+id/extraCreamInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Extra Cream (Yes/No)"
        android:inputType="text" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Place Order" />
</LinearLayout>
